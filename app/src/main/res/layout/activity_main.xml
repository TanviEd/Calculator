<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >


        <TextView
            android:id="@+id/tx1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text=""
            android:background="#36F42F"
            android:textColor="#880101"
            android:textStyle="bold"
            android:gravity="right"
            android:paddingRight="10dp"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="35dp"
            android:text=""
            android:background="#5BECD6"
            android:textColor="#010188"
            android:textStyle="bold"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        >

        <Button
            android:id="@+id/btn7"
            android:text="7"
            style="@style/btn_style"
            />

        <Button
            android:id="@+id/btn8"
            style="@style/btn_style"
            android:text="8"

            />

        <Button
            android:id="@+id/btn9"
            android:text="9"
            style="@style/btn_style"

            />

        <Button
            android:id="@+id/btnDiv"
            android:text="/"
            style="@style/btn_style"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        >

        <Button
            android:id="@+id/btn4"
            android:text="4"
            style="@style/btn_style"
            />

        <Button
            android:id="@+id/btn5"
            android:text="5"
            style="@style/btn_style"

            />

        <Button
            android:id="@+id/btn6"
            android:text="6"
            style="@style/btn_style"
            />

        <Button
            android:id="@+id/btnMul"
            android:text="X"
            style="@style/btn_style"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        >

        <Button
            android:id="@+id/btn1"
            android:text="1"
            style="@style/btn_style"
            />

        <Button
            android:id="@+id/btn2"
            android:text="2"
            style="@style/btn_style"

            />

        <Button
            android:id="@+id/btn3"
            android:text="3"
            style="@style/btn_style"
            />

        <Button
            android:id="@+id/btnSub"
            android:text="-"
            style="@style/btn_style"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        >

        <Button
            android:id="@+id/btnDot"
            android:text="."
            style="@style/btn_style"
            />

        <Button
            android:id="@+id/btn0"
            android:text="0"
            style="@style/btn_style"

            />

        <Button
            android:id="@+id/btnEq"
            android:text="="
            style="@style/btn_style"
            />

        <Button
            android:id="@+id/btnAdd"
            android:text="+"
            style="@style/btn_style"
            />
    </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="CLEAR"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/bg_clear_btn"
            />

</LinearLayout>